[Unit]
Description=The agent of the Impera platform
After=network.target

[Service]
Type=simple

Environment=PATH=/opt/rh/rh-python34/root/usr/bin:${PATH}
Environment=LD_LIBRARY_PATH=/opt/rh/rh-python34/root/usr/lib64${LD_LIBRARY_PATH}
ExecStart=/opt/rh/rh-python34/root/usr/bin/impera -vvv -c /etc/impera/agent.cfg agent
Restart=on-failure
User=impera
Group=impera

[Install]
WantedBy=multi-user.target
